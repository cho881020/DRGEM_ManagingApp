<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_background"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <!--check : 그림자 확인-->
        <LinearLayout
            android:layout_width="420dp"
            android:layout_height="420dp"
            android:background="@drawable/layout_login_background"
            android:elevation="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="168dp"
                android:layout_height="71dp"
                android:layout_marginHorizontal="117dp"
                android:layout_marginTop="83dp"
                android:src="@drawable/drgem_logo" />

            <EditText
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="80dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/edt_login_background"
                android:drawableLeft="@drawable/id_image"
                android:drawablePadding="8.35dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:maxLines="1"
                android:inputType="text"
                android:hint="사원 ID"
                android:paddingLeft="9.35dp"
                android:textSize="14dp" />

            <EditText
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="80dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edt_login_background"
                android:drawableLeft="@drawable/pw_image"
                android:drawablePadding="8.35dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:maxLines="1"
                android:inputType="text"
                android:hint="비밀번호"
                android:paddingLeft="9.35dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/btnLogin"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_login_background"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:gravity="center"
                android:text="로그인"
                android:textColor="@color/color_FFFFFF"
                android:textSize="14dp" />


        </LinearLayout>


    </LinearLayout>
</layout>