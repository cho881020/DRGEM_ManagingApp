<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_background"
        tools:context=".menu.order.activity.CompanyActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutTitle"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="@color/color_FFFFFF"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25.6dp"
                android:layout_marginTop="48.2dp"
                android:src="@drawable/btn_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="20.04dp"
                android:layout_marginTop="45dp"
                android:text="거래명세입고"
                android:textColor="@color/color_000000"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="75.79dp"
                android:layout_height="28.94dp"
                android:layout_marginTop="37dp"
                android:layout_marginEnd="22.21dp"
                android:src="@drawable/drgem_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/layoutDetail"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:background="@color/color_FFFFFF"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutTitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rectangle_105"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="55dp"
                    android:src="@drawable/rectangle_105"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layoutTitle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="00전자(11111)"
                    android:textColor="@color/color_000000"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/rectangle_105"
                    app:layout_constraintTop_toBottomOf="@id/layoutTitle" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="1170dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:background="@color/color_F4F4F4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="32dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:text="거래처코드"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="11111"
                        android:textColor="@color/color_000000"
                        android:textSize="14dp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:background="@color/color_E0E0E0" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:text="거래처명"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="00전자"
                        android:textColor="@color/color_000000"
                        android:textSize="14dp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:background="@color/color_E0E0E0" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:text="대표자명"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="일지매"
                        android:textColor="@color/color_000000"
                        android:textSize="14dp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:background="@color/color_E0E0E0" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:text="전화번호"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="0313971991"
                        android:textColor="@color/color_000000"
                        android:textSize="14dp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:background="@color/color_E0E0E0" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:text="주소"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="경기도 군포시 당동 885-104"
                        android:textColor="@color/color_000000"
                        android:textSize="14dp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutFind"
            android:layout_width="1170dp"
            android:layout_height="65dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutDetail">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="발주 내역 (3건)"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/color_000000"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:text="등록일자"
                android:textColor="@color/color_000000"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginStart="9dp"
                android:background="@drawable/light_gray_box"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="9dp"
                    android:text="2022-01-12"
                    android:textColor="@color/color_000000"
                    android:textSize="14dp" />


                <ImageView
                    android:layout_width="13.75dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="16.25dp"
                    android:src="@drawable/dropdown" />


            </LinearLayout>

            <View
                android:layout_width="8dp"
                android:layout_height="1dp"
                android:layout_marginHorizontal="5dp"
                android:background="@color/color_E0E0E0" />


            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/light_gray_box"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="9dp"
                    android:text="2022-01-12"
                    android:textColor="@color/color_000000"
                    android:textSize="14dp" />


                <ImageView
                    android:layout_width="13.75dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="16.25dp"
                    android:src="@drawable/dropdown" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:text="발주번호"
                android:textColor="@color/color_000000"
                android:textSize="14dp" />

            <TextView
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/light_gray_box"
                android:gravity="center_vertical"
                android:paddingStart="13dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                tools:text="G22042600391" />

            <TextView
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/btn_find"
                android:gravity="center"
                android:text="검색"
                android:textColor="@color/color_FFFFFF"
                android:textSize="12dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="1170dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/layout_find_background"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutFind"
            app:layout_constraintVertical_weight="0">


            <LinearLayout
                android:layout_width="1125dp"
                android:layout_height="35dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_F4F4F4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginStart="30dp"
                    android:text="발주번호"
                    android:textColor="@color/color_808080" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginStart="30dp"
                    android:text="발주일"
                    android:textColor="@color/color_808080" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginStart="30dp"
                    android:text="납품장소"
                    android:textColor="@color/color_808080" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginStart="30dp"
                    android:text="비고"
                    android:textColor="@color/color_808080" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/btnDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginEnd="10dp"
                    android:text="임시버튼"
                    android:textColor="@color/color_808080" />


            </LinearLayout>

            <View
                android:layout_width="1125dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/color_B3B3B3" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/findOrderRecyclerView"
                android:layout_width="1125dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginBottom="40dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>