<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/base_background"
        tools:context=".menu.order.activity.OrderDetailDetailActivity">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/btn_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="발주번호  - B22042200003"
                android:textColor="@color/color_000000"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="10dp"/>


            <TextView
                android:id="@+id/btnSave"
                android:layout_width="96dp"
                android:layout_height="35dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_save"
                android:gravity="center"
                android:text="저장하기"
                android:textColor="@color/color_FFFFFF"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_FFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="발주번호 - "
                    android:textColor="@color/color_000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:text="B22042200003"
                    android:textColor="@color/color_3DBBE2"
                    android:textSize="16dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:background="@color/color_F4F4F4"
                    android:gravity="center"
                    android:text="발주일자"
                    android:textColor="@color/color_808080"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="15dp"
                    android:text="20220312"
                    android:textColor="@color/color_000000"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:background="@color/color_F4F4F4"
                    android:gravity="center"
                    android:text="거래처코드"
                    android:textColor="@color/color_808080"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="15dp"
                    android:text="01133"
                    android:textColor="@color/color_000000"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:background="@color/color_F4F4F4"
                    android:gravity="center"
                    android:text="거래처명"
                    android:textColor="@color/color_808080"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="15dp"
                    android:text="00전자"
                    android:textColor="@color/color_000000"
                    android:textSize="12dp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_E0E0E0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:background="@color/color_F4F4F4"
                    android:gravity="center"
                    android:text="사양"
                    android:textColor="@color/color_808080"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="15dp"
                    android:text="(구매조건부사업) 연구소 토파즈 정부과제 샘플 구매"
                    android:textColor="@color/color_000000"
                    android:textSize="12dp" />




            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_E0E0E0" />


        </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutFold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@color/color_FFFFFF"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingVertical="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="입고일자"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />


                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/light_gray_box"
                        android:gravity="center_vertical">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/light_gray_box"
                            android:textColor="@color/color_000000"
                            android:textSize="12dp" />

                        <ImageView
                            android:layout_width="13.75dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/dropdown" />


                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사업장"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <FrameLayout
                        android:layout_width="140dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/light_gray_box"
                        android:gravity="center_vertical">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/light_gray_box"
                            android:textColor="@color/color_000000"
                            android:textSize="12dp" />

                        <ImageView
                            android:layout_width="13.75dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/dropdown" />


                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="창고"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <FrameLayout
                        android:layout_width="140dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/light_gray_box"
                        android:gravity="center_vertical">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/light_gray_box"
                            android:textColor="@color/color_000000"
                            android:textSize="12dp" />

                        <ImageView
                            android:layout_width="13.75dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/dropdown" />


                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="입고담당자"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/light_gray_box"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edtName"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="9dp"
                            android:background="@null"
                            android:maxLines="1"
                            android:inputType="text"
                            android:text="홍길동"
                            android:textColor="@color/color_000000"
                            android:textSize="12dp" />

                        <ImageView
                            android:id="@+id/btnNameRemove"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_marginEnd="9dp"
                            android:src="@drawable/btn_x" />

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>



            <LinearLayout
                android:id="@+id/layoutList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="10dp"
                android:background="@color/color_FFFFFF"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:text="품목 갯수"
                        android:textColor="@color/color_000000"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="20dp"
                        android:text="(3건)"
                        android:textColor="@color/color_3DBBE2"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:background="@color/color_F4F4F4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:text="순번"
                                android:textColor="@color/color_808080"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:layout_marginStart="30dp"
                                android:text="품목코드"
                                android:textColor="@color/color_808080"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:layout_marginStart="30dp"
                                android:text="품명"
                                android:textColor="@color/color_808080"
                                android:textSize="12dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:layout_marginStart="47dp"
                                android:text="도번/모델"
                                android:textColor="@color/color_808080"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:layout_marginStart="46dp"
                                android:text="사양"
                                android:textColor="@color/color_808080"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:layout_marginStart="46dp"
                                android:text="단위"
                                android:textColor="@color/color_808080"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:layout_marginStart="46dp"
                                android:text="발주수량"
                                android:textColor="@color/color_808080"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:layout_marginStart="46dp"
                                android:text="기입고수량"
                                android:textColor="@color/color_808080"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:layout_marginStart="46dp"
                                android:text="입고수량"
                                android:textColor="@color/color_808080"
                                android:textSize="12dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:layout_marginStart="46dp"
                                android:text="시리얼/상세"
                                android:textColor="@color/color_808080"
                                android:textSize="12dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:layout_marginStart="46dp"
                                android:text="중요자재여부"
                                android:textColor="@color/color_808080"
                                android:textSize="12dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:layout_marginStart="46dp"
                                android:text="위치"
                                android:textColor="@color/color_808080"
                                android:textSize="12dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:layout_marginStart="46dp"
                                android:text="발주번호"
                                android:textColor="@color/color_808080"
                                android:textSize="12dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:layout_marginStart="46dp"
                                android:text="발주순번"
                                android:textColor="@color/color_808080"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_B3B3B3" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


                    </LinearLayout>

                </HorizontalScrollView>


            </LinearLayout>



    </LinearLayout>
</layout>
