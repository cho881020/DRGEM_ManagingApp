<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background"
    tools:context=".TradingStatementActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@color/color_FFFFFF"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25.6dp"
            android:layout_marginTop="48.2dp"
            android:src="@drawable/btn_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="20.04dp"
            android:layout_marginTop="45dp"
            android:text="거래명세입고"
            android:textColor="@color/color_000000"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="75.79dp"
            android:layout_height="28.94dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="22.21dp"
            android:src="@drawable/drgem_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/blueArrow"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/blue_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:text="거래명세입고"
        android:textColor="@color/color_000000"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/blueArrow"
        app:layout_constraintTop_toBottomOf="@id/layoutTitle" />

    <LinearLayout
        android:id="@+id/layoutFind"
        android:layout_width="1170dp"
        android:layout_height="65dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/layout_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutTitle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:text="등록일자"
            android:textColor="@color/color_000000"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="9dp"
            android:background="@drawable/light_gray_box"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="9dp"
                android:textColor="@color/color_000000"
                android:textSize="14dp"
                tools:text="2022-01-12" />


            <ImageView
                android:layout_width="13.75dp"
                android:layout_height="10dp"
                android:layout_marginStart="16.25dp"
                android:src="@drawable/dropdown" />


        </LinearLayout>

        <View
            android:layout_width="8dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/color_E0E0E0" />


        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/light_gray_box"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="9dp"
                android:textColor="@color/color_000000"
                android:textSize="14dp"
                tools:text="2022-01-12" />


            <ImageView
                android:layout_width="13.75dp"
                android:layout_height="10dp"
                android:layout_marginStart="16.25dp"
                android:src="@drawable/dropdown" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:text="거래명세번호"
            android:textColor="@color/color_000000"
            android:textSize="14dp" />

        <TextView
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:background="@drawable/light_gray_box"
            android:layout_marginStart="10dp"
            tools:text ="G22042600391"
            android:textColor="@color/black"
            android:paddingStart="13dp"
            android:textSize="14dp"/>

        <TextView
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_find"
            android:layout_marginStart="254dp"
            android:gravity="center"
            android:text="검색"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/color_FFFFFF"/>

        <TextView
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:background="@drawable/btn_reset"
            android:text="초기화"
            android:textStyle="bold"
            android:textColor="@color/color_808080"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="1170dp"
        android:layout_height="330dp"
        android:orientation="vertical"
        android:background="@drawable/layout_background"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/layoutFind"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="23dp">

        <ImageView
            android:layout_width="82dp"
            android:layout_height="72.75dp"
            android:src="@drawable/empty_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="18.43dp"
            android:textStyle="bold"
            android:text="검색 항목이 없습니다"
            android:textColor="@color/color_B3B3B3"/>

    </LinearLayout>

    <ImageView
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/add_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="39dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>