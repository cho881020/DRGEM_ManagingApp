<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_background"
        tools:context=".menu.tradingstatement.activity.TradingStatementActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutTitle"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="@color/color_FFFFFF"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25.6dp"
                android:layout_marginTop="48.2dp"
                android:src="@drawable/btn_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="20.04dp"
                android:layout_marginTop="45dp"
                android:text="거래명세입고"
                android:textColor="@color/color_000000"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="75.79dp"
                android:layout_height="28.94dp"
                android:layout_marginTop="37dp"
                android:layout_marginEnd="22.21dp"
                android:src="@drawable/drgem_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tradingStatementRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/layoutTitle"
            app:layout_constraintBottom_toTopOf="@+id/layoutBtn"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginHorizontal="55dp"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="15dp"
            android:background="@color/color_FFFFFF"
            android:layout_marginHorizontal="55dp"
            android:layout_marginBottom="39dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/btn_light_gray"
                android:text="취소"
                android:textColor="@color/color_000000"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/btnEdit"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/borderbox_skyblue_round2"
                android:text="편집하기"
                android:textColor="@color/color_FFFFFF"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/btnSave"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/btn_save"
                android:text="저장하기"
                android:textColor="@color/color_FFFFFF"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />




        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>