<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_background"
        android:orientation="vertical"
        tools:context=".menu.location.activity.LocationActivity">

        <LinearLayout
            android:id="@+id/layoutTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25.6dp"
                android:src="@drawable/btn_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="20.04dp"
                android:text="로케이션조회"
                android:textColor="@color/color_000000"
                android:textSize="14dp"
                android:textStyle="bold" />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />


            <TextView
                android:layout_width="75.79dp"
                android:layout_height="28.94dp"
                android:layout_marginEnd="22.21dp"
                android:background="@drawable/btn_save"
                android:gravity="center"
                android:text="저장하기"
                android:textColor="@color/color_FFFFFF"
                android:textSize="14dp"
                android:textStyle="bold" />




        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutFind"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_find_background"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출고할사업장"
                    android:textColor="@color/color_808080"
                    android:textSize="12dp" />


                <FrameLayout
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/light_gray_box"
                    android:gravity="center_vertical">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/light_gray_box"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="13.75dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/dropdown" />


                </FrameLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="키팅자"
                    android:textColor="@color/color_000000"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/light_gray_box"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtCompany"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="9dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:inputType="text"
                        android:text="00전자"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/btnCompanyRemove"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginEnd="9dp"
                        android:src="@drawable/btn_x" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="창고번호"
                    android:textColor="@color/color_000000"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/light_gray_box"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtWarehouse"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="9dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:inputType="text"
                        android:text="창고1"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/btnWarehouseRemove"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginEnd="9dp"
                        android:src="@drawable/btn_x" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/btnFind"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/btn_find"
                android:gravity="center"
                android:text="검색"
                android:textColor="@color/color_FFFFFF"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/btn_reset"
                android:gravity="center"
                android:text="초기화"
                android:textColor="@color/color_808080"
                android:textSize="12dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutEmpty"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_find_background"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="82dp"
                android:layout_height="72.75dp"
                android:src="@drawable/empty_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="18.43dp"
                android:text="검색 항목이 없습니다"
                android:textColor="@color/color_B3B3B3"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/layout_find_background"
            android:orientation="vertical"
            android:visibility="visible">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="품명 BUCKY_COVER_SILK_PRINT 의 검색결과 (3건)"
                android:textColor="@color/color_000000"
                android:textSize="14dp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:paddingHorizontal="20dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:text="순번"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:layout_marginStart="30dp"
                            android:text="품목코드"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:layout_marginStart="30dp"
                            android:text="품명"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:layout_marginStart="47dp"
                            android:text="도번/모델"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:layout_marginStart="46dp"
                            android:text="사양"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:layout_marginStart="46dp"
                            android:text="단위"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:layout_marginStart="46dp"
                            android:text="현재고수량"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:layout_marginStart="46dp"
                            android:text="창고위치"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_B3B3B3" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


                </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>

    </LinearLayout>

</layout>