<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="930dp"
    android:layout_height="675dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@color/color_FFFFFF">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="거래명세입고"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="39dp"
        android:layout_marginStart="31dp"
        android:textSize="14dp"
        android:textColor="@color/color_999999"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="31dp"
        android:text=" 거래명세등록"
        android:textSize="21dp"
        android:textStyle="bold"
        android:textColor="@color/color_000000"/>

    <TextView
        android:id="@+id/txtNumTitle"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="거래명세번호"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="31dp"
        android:layout_marginStart="185dp"
        android:textSize="12dp"
        android:textColor="@color/color_999999"/>

    <EditText
        android:id="@+id/edtNumTitle"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/txtNumTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="185dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/light_gray_box"/>

    <TextView
        android:id="@+id/txtCountTitle"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="품목갯수"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtNumTitle"
        android:layout_marginTop="31dp"
        android:layout_marginStart="123dp"
        android:textSize="12dp"
        android:textColor="@color/color_999999"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/txtCountTitle"
        app:layout_constraintStart_toEndOf="@+id/edtNumTitle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/gray_box"/>

    <TextView
        android:id="@+id/btnAdd"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/btn_add"
        android:text="+품목추가"
        android:textStyle="bold"
        android:textColor="@color/color_FFFFFF"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/btnAdd"
        android:layout_marginTop="17dp"/>

    <LinearLayout
        android:id="@+id/layoutRecyclerView"
        android:layout_width="850dp"
        android:layout_height="490dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintBottom_toTopOf="@id/layoutBtn">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/layoutBtn"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="layoutRecyclerView"
        app:layout_constraintBottom_toBottomOf="parent" >


        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_light_gray"
            android:gravity="center"
            android:text="취소"
            android:textSize="12dp"
            android:layout_marginStart="696dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_skyblue_add"
            android:gravity="center"
            android:text="등록하기"
            android:textColor="@color/color_FFFFFF"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_marginStart="10dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>