<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/base_background"
    tools:context=".menu.stock.activity.StockActivity">

    <LinearLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@color/color_FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25.6dp"
            android:src="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="20.04dp"
            android:text="재고조사"
            android:textColor="@color/color_000000"
            android:textSize="14dp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />


        <ImageView
            android:layout_width="75.79dp"
            android:layout_height="28.94dp"
            android:layout_marginEnd="22.21dp"
            android:src="@drawable/drgem_logo"
            android:gravity="center"
            android:text="저장하기"
            android:textColor="@color/color_FFFFFF"
            android:textSize="14dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/blueArrow"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginStart="55dp"
            android:src="@drawable/blue_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:text="품목정보요청"
            android:textColor="@color/color_000000"
            android:textSize="21dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/btnFind"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/btn_save"
            android:text="재고조사준비"
            android:textColor="@color/color_FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="재고조사 준비 완료 시 작업이 가능합니다 (최대 1분 소요)"
            android:textColor="@color/color_000000"
            android:textSize="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutEmpty"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/layout_find_background"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="82dp"
            android:layout_height="72.75dp"
            android:src="@drawable/empty_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="18.43dp"
            android:text="검색 항목이 없습니다"
            android:textColor="@color/color_B3B3B3"
            android:textStyle="bold" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/layoutList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/layout_find_background"
        android:orientation="vertical"
        android:visibility="gone"
        >




        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="21dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="21dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/color_F4F4F4"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:layout_marginStart="30dp"
                        android:text="품번"
                        android:textColor="@color/color_808080" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:layout_marginStart="100dp"
                        android:text="수량"
                        android:textColor="@color/color_808080" />


<!--                    <View-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="1dp"-->
<!--                        android:layout_weight="1" />-->

<!--                    <TextView-->
<!--                        android:id="@+id/btnDetail"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="17dp"-->
<!--                        android:layout_marginEnd="10dp"-->
<!--                        android:text="임시버튼"-->
<!--                        android:textColor="@color/color_808080" />-->


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_B3B3B3" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


            </LinearLayout>

        </HorizontalScrollView>


    </LinearLayout>




</LinearLayout>
</layout>