<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background"
    tools:context=".menu.kitting.activity.KittingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@color/color_FFFFFF"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25.6dp"
            android:layout_marginTop="48.2dp"
            android:src="@drawable/btn_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="20.04dp"
            android:layout_marginTop="45dp"
            android:text="키팅출고"
            android:textColor="@color/color_000000"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="75.79dp"
            android:layout_height="28.94dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="22.21dp"
            android:src="@drawable/drgem_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/blueArrow"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/blue_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:text="키팅번호요청"
        android:textColor="@color/color_000000"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/blueArrow"
        app:layout_constraintTop_toBottomOf="@id/layoutTitle" />

    <LinearLayout
        android:id="@+id/layoutFind"
        android:layout_width="1170dp"
        android:layout_height="65dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/layout_find_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutTitle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:text="등록일자"
            android:textColor="@color/color_000000"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="9dp"
            android:background="@drawable/light_gray_box"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="9dp"
                android:text="2022-01-12"
                android:textColor="@color/color_000000"
                android:textSize="14dp" />


            <ImageView
                android:layout_width="13.75dp"
                android:layout_height="10dp"
                android:layout_marginStart="16.25dp"
                android:src="@drawable/dropdown" />


        </LinearLayout>

        <View
            android:layout_width="8dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/color_E0E0E0" />


        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/light_gray_box"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="9dp"
                android:text="2022-01-12"
                android:textColor="@color/color_000000"
                android:textSize="14dp" />


            <ImageView
                android:layout_width="13.75dp"
                android:layout_height="10dp"
                android:layout_marginStart="16.25dp"
                android:src="@drawable/dropdown" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:text="키팅자"
            android:textColor="@color/color_000000"
            android:textSize="14dp" />

        <TextView
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/light_gray_box"
            android:gravity="center_vertical"
            android:paddingStart="13dp"
            android:textColor="@color/black"
            android:textSize="14dp"
            tools:text="홍길동" />

        <TextView
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:layout_marginStart="254dp"
            android:background="@drawable/btn_find"
            android:gravity="center"
            android:text="검색"
            android:textColor="@color/color_FFFFFF"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/btn_reset"
            android:gravity="center"
            android:text="초기화"
            android:textColor="@color/color_808080"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="1170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:background="@drawable/layout_find_background"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutFind"
        android:layout_marginBottom="100dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="35dp"
            android:text="등록자 홍길동 의 검색결과 (2건)"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/color_000000"/>


        <LinearLayout
            android:layout_width="1125dp"
            android:layout_height="35dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_F4F4F4"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginStart="30dp"
                android:text="키팅번호"
                android:textColor="@color/color_808080"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginStart="30dp"
                android:text="키팅등록일"
                android:textColor="@color/color_808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginStart="30dp"
                android:text="키팅자"
                android:textColor="@color/color_808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginStart="30dp"
                android:text="20220403"
                android:textColor="@color/color_808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginStart="30dp"
                android:text="불출창고"
                android:textColor="@color/color_808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginStart="30dp"
                android:text="비고"
                android:textColor="@color/color_808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginStart="30dp"
                android:text="요청번호"
                android:textColor="@color/color_808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginStart="30dp"
                android:text="출하요청번호"
                android:textColor="@color/color_808080" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/btnDetail"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginEnd="10dp"
                android:text="임시버튼"
                android:textColor="@color/color_808080" />


        </LinearLayout>

        <View
            android:layout_width="1125dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/color_B3B3B3"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/findKittingList"
            android:layout_width="1125dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginStart="21dp"
            android:layout_marginBottom="40dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/btnAdd"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="39dp"
        android:src="@drawable/add_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>