<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_background"
        android:orientation="vertical"
        tools:context=".menu.transaction.activity.TransactionActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/btn_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="거래명세입고"
                android:textColor="@color/color_000000"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="10dp"/>


            <TextView
                android:id="@+id/btnSave"
                android:layout_width="96dp"
                android:layout_height="35dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_save"
                android:gravity="center"
                android:text="저장하기"
                android:textColor="@color/color_FFFFFF"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/layoutFind"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/color_FFFFFF"
            android:gravity="bottom"
            android:paddingBottom="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거래명세번호"
                    android:textColor="@color/color_000000"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/light_gray_box"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtTranNum"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="9dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textColor="@color/color_000000"
                        android:text="G22011900032"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/btnTranRemove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="7dp"
                        android:src="@drawable/btn_x" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/btnFind"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/btn_find"
                android:gravity="center"
                android:text="검색"
                android:textColor="@color/color_FFFFFF"
                android:textSize="12dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layoutInfo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:paddingHorizontal="10dp"
                android:background="@color/color_F4F4F4"
                android:visibility="gone"
                tools:visibility="visible"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:text="거래처명"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/georaecheomyeong"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        tools:text="00전자"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/color_E0E0E0" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:text="입고사업장"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/nappumcheomyeong"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        tools:text="구미공장A"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/color_E0E0E0" />


                <LinearLayout
                    android:id="@+id/layoutBigo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:text="비고"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/bigo"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        tools:text="(구매조건부사업) 연구소 토파즈 정부과제 샘플 구매"
                        android:maxLines="1"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp"
                        android:ellipsize="end" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutFold"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="1dp"
            android:background="@color/color_FFFFFF"
            android:gravity="bottom"
            android:visibility="gone"
            tools:visibility="visible"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입고일자"
                    android:textColor="@color/color_808080"
                    android:textSize="12dp" />


                <LinearLayout
                    android:id="@+id/layoutDate"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/light_gray_box"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="7dp"
                        android:text="2022-01-12"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="7dp"
                        android:src="@drawable/dropdown" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사업장"
                    android:textColor="@color/color_808080"
                    android:textSize="12dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/light_gray_box"
                    android:gravity="center_vertical">

                    <Spinner
                        android:id="@+id/spinnerCompany"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/light_gray_box"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginHorizontal="7dp"
                        android:src="@drawable/dropdown" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="창고"
                    android:textColor="@color/color_808080"
                    android:textSize="12dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/light_gray_box"
                    android:gravity="center_vertical">

                    <Spinner
                        android:id="@+id/spinnerWareHouse"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/light_gray_box"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginHorizontal="7dp"
                        android:src="@drawable/dropdown" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입고담당자"
                    android:textColor="@color/color_808080"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/light_gray_box"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="7dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:inputType="text"
                        android:privateImeOptions="defaultInputmode=korean"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/btnNameRemove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="7dp"
                        android:src="@drawable/btn_x" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>


            <LinearLayout
                android:id="@+id/btnFold"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="접기"
                    android:textColor="@color/color_808080"
                    android:textSize="12dp"/>

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="4.5dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/fold_icon" />


            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/layoutEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/layout_find_background"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible"
            tools:visibility="gone">

            <ImageView
                android:layout_width="82dp"
                android:layout_height="72.75dp"
                android:layout_marginTop="73dp"
                android:src="@drawable/empty_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="18dp"
                android:text="검색 항목이 없습니다"
                android:textColor="@color/color_B3B3B3"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="10dp"
            android:background="@color/color_FFFFFF"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="거래상세 내역"
                    android:textColor="@color/color_000000"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    tools:text="(3건)"
                    android:textColor="@color/color_3DBBE2"
                    android:textSize="14dp"
                    android:textStyle="bold" />


                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:id="@+id/btnOpen"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="열기"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="4.5dp"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/open_icon" />


                </LinearLayout>


            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp">

                        <LinearLayout
                            android:id="@+id/layoutSeq"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtSeq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="순번"
                                android:textColor="@color/color_808080"
                                android:textSize="12dp" />


                            <ImageView
                                android:id="@+id/imgSeq"
                                android:src="@drawable/dropempty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"/>


                        </LinearLayout>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="품목코드"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="품명"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />


                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="도번/모델"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="사양"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="단위"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="발주수량"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="기입고수량"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="입고수량"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/serialDetail"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="시리얼/상세"
                            android:visibility="gone"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />




                        <LinearLayout
                            android:id="@+id/layoutLocation"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="위치"
                                android:textColor="@color/color_808080"
                                android:textSize="12dp" />


                            <ImageView
                                android:id="@+id/imgLocation"
                                android:src="@drawable/dropempty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"/>


                        </LinearLayout>



                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="발주번호"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />


                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="발주순번"
                            android:textColor="@color/color_808080"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_B3B3B3" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


                </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>


    </LinearLayout>
</layout>