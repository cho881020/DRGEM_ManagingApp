<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_background"
        android:orientation="vertical"
        tools:context=".menu.notdelivery.activity.NotDeliveryActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_back" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:text="미출자재출고"
                android:textColor="@color/color_000000"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/btnSave"
                android:layout_width="96dp"
                android:layout_height="35dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_save"
                android:gravity="center"
                android:text="저장하기"
                android:textColor="@color/color_FFFFFF"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/color_FFFFFF"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingVertical="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="등록일자"
                    android:textColor="@color/color_000000"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layoutDateStart"
                        android:layout_width="65dp"
                        android:layout_height="35dp"
                        android:background="@drawable/light_gray_box"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txtDateStart"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="7dp"
                            android:layout_weight="1"
                            tools:text="01-12"
                            android:textColor="@color/color_000000"
                            android:textSize="12dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="7dp"
                            android:src="@drawable/dropdown" />

                    </LinearLayout>

                    <View
                        android:layout_width="8dp"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="2dp"
                        android:background="@color/color_E0E0E0" />

                    <LinearLayout
                        android:id="@+id/layoutDateEnd"
                        android:layout_width="65dp"
                        android:layout_height="35dp"
                        android:background="@drawable/light_gray_box"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txtDateEnd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="7dp"
                            android:layout_weight="1"
                            tools:text="01-12"
                            android:textColor="@color/color_000000"
                            android:textSize="12dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="7dp"
                            android:src="@drawable/dropdown" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사업장"
                    android:textColor="@color/color_808080"
                    android:textSize="12dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="85dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/light_gray_box"
                    android:gravity="center_vertical">

                    <Spinner
                        android:id="@+id/spinnerCompany"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/light_gray_box"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="7dp"
                        android:src="@drawable/dropdown"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="창고"
                    android:textColor="@color/color_808080"
                    android:textSize="12dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="85dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/light_gray_box"
                    android:gravity="center_vertical">

                    <Spinner
                        android:id="@+id/spinnerWareHouse"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/light_gray_box"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="7dp"
                        android:src="@drawable/dropdown"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="요청자"
                    android:textColor="@color/color_808080"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/light_gray_box"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:text="홍길동" />

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteYocheongja"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:privateImeOptions="defaultInputmode=korean"
                        android:paddingHorizontal="7dp"
                        android:maxLines="1"
                        android:background="@null"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp"
                        android:completionThreshold="1" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="품목코드"
                    android:textColor="@color/color_808080"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/light_gray_box"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtCode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="7dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:inputType="text"
                        android:privateImeOptions="defaultInputmode=korean"
                        tools:text="품목코드"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:id="@+id/btnCodeRemove"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="7dp"
                            android:focusable="false"
                            android:src="@drawable/btn_x" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkMigwanri"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="미관리 항목 포함"
                    android:textSize="12dp"
                    android:drawableLeft="@drawable/btn_checkbox"
                    android:drawablePadding="5dp"
                    android:checked="true"
                    android:button="@null"
                    android:buttonTint="@color/color_455591"/>

                <TextView
                    android:id="@+id/btnFind"
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:background="@drawable/btn_find"
                    android:gravity="center"
                    android:text="검색"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/layout_find_background"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible"
            tools:visibility="gone">

            <ImageView
                android:layout_width="82dp"
                android:layout_height="72.75dp"
                android:layout_marginTop="73dp"
                android:src="@drawable/empty_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/layout_find_background"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:paddingVertical="10dp"
                android:layout_marginBottom="1dp"
                android:background="@color/color_FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:gravity="center_vertical"
                    android:text="검색 결과"
                    android:textColor="@color/color_000000"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    tools:text="(3건)"
                    android:textColor="@color/color_3DBBE2"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/btnFold"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:visibility="visible"
                    tools:visibility="visible"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="접기"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="4.5dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/fold_icon" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnOpen"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="열기"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="4.5dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/open_icon" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutFold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_FFFFFF"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingVertical="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출고일자"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layoutDate"
                            android:layout_width="65dp"
                            android:layout_height="35dp"
                            android:background="@drawable/light_gray_box"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/txtDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="7dp"
                                android:layout_weight="1"
                                tools:text="01-12"
                                android:textColor="@color/color_000000"
                                android:textSize="12dp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="7dp"
                                android:src="@drawable/dropdown" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출고할사업장"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="95dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/light_gray_box"
                        android:gravity="center_vertical">

                        <Spinner
                            android:id="@+id/spinnerCompanyOut"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/light_gray_box"
                            android:textColor="@color/color_000000"
                            android:textSize="12dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="7dp"
                            android:src="@drawable/dropdown"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출고창고"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="95dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/light_gray_box"
                        android:gravity="center_vertical">

                        <Spinner
                            android:id="@+id/spinnerWareHouseOut"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/light_gray_box"
                            android:textColor="@color/color_000000"
                            android:textSize="12dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="7dp"
                            android:src="@drawable/dropdown"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출고담당자"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/light_gray_box"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/chulgodamdangjacode"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="7dp"
                            android:background="@null"
                            android:maxLines="1"
                            android:inputType="text"
                            android:privateImeOptions="defaultInputmode=korean"
                            tools:text="홍길동"
                            android:textColor="@color/color_000000"
                            android:textSize="12dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="입고 사업자"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="95dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/light_gray_box"
                        android:gravity="center_vertical">

                        <Spinner
                            android:id="@+id/spinnerCompanyIn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/light_gray_box"
                            android:textColor="@color/color_000000"
                            android:textSize="12dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="7dp"
                            android:src="@drawable/dropdown"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="입고 창고"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="95dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/light_gray_box"
                        android:gravity="center_vertical">

                        <Spinner
                            android:id="@+id/spinnerWareHouseIn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/light_gray_box"
                            android:textColor="@color/color_000000"
                            android:textSize="12dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="7dp"
                            android:src="@drawable/dropdown"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="입고담당자"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/light_gray_box"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/edtInName"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:text="홍길동" />

                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteTextView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:inputType="text"
                            android:privateImeOptions="defaultInputmode=korean"
                            android:paddingHorizontal="7dp"
                            android:maxLines="1"
                            android:background="@null"
                            android:textColor="@color/color_000000"
                            android:textSize="12dp"
                            android:completionThreshold="1" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:layout_marginTop="10dp"
                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp">

