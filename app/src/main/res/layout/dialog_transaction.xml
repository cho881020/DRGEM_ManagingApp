<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borderbox_white_round12"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="673dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="발주번호 - "
                    android:textColor="@color/color_000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/baljubeonho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:text="B22042200003"
                    android:textColor="@color/color_3DBBE2"
                    android:textSize="16dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="22dp"
                android:background="@color/color_000000" />

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="품목코드"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/pummokcode"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        tools:text="E08-000601-00"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="품명"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/pummyeong"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        tools:text="TUBE STAND BOX(1,800mm용)"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="도번/모델"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/dobeonModel"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        tools:text="G22042600391"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="사양"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/saying"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        tools:text="G22042600391"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="단위"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/balhudanwi"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        tools:text="0004"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="발주순번"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/seq"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        tools:text="1"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="중요자재\n여부"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/jungyojajeyeobu"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        tools:text="Y"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />


                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="위치"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        tools:text="-"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />


                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="입고예정일"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/ipgoyejeongil"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        tools:text="20220203"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="발주수량"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/baljusuryang"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        tools:text="7"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />


                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="입고수량"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/ipgosuryang"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        tools:text="7"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_E0E0E0" />


            </LinearLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="35dp"
                android:text="시리얼번호 관리"
                android:textColor="@color/color_000000"
                android:textSize="16dp"
                android:textStyle="bold" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/btnCancel"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_light_gray"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="center"
                    android:text="취소"
                    android:textSize="12dp" />

                <TextView

                    android:id="@+id/btnAdd"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_save"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    android:text="등록하기"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>


    </LinearLayout>
</layout>