<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background"
    tools:context=".MenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="126.76dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="홍길동1234 님"
        android:textColor="@color/black"
        android:textSize="14dp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="107.76dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="36.76dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="로그아웃"
        android:textSize="14dp"
        android:textColor="@color/red"/>

    <ImageView
        android:layout_width="186dp"
        android:layout_height="71dp"
        android:src="@drawable/drgem_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="153dp"/>

    <LinearLayout
        android:id="@+id/tradingStatement"
        android:layout_width="178dp"
        android:layout_height="178dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="272dp"
        android:layout_marginStart="250dp"
        android:background="@drawable/btn_menu_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:text="거래명세입고"
            android:textColor="@color/black"
            android:layout_marginTop="122dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/orderReceipt"
        android:layout_width="178dp"
        android:layout_height="178dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tradingStatement"
        android:layout_marginTop="272dp"
        android:layout_marginStart="23dp"
        android:background="@drawable/btn_menu_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:text="발주입고"
            android:textColor="@color/black"
            android:layout_marginTop="122dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/kitting"
        android:layout_width="178dp"
        android:layout_height="178dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/orderReceipt"
        android:layout_marginTop="272dp"
        android:layout_marginStart="23dp"
        android:background="@drawable/btn_menu_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:text="키팅출고"
            android:textColor="@color/black"
            android:layout_marginTop="122dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/request"
        android:layout_width="178dp"
        android:layout_height="178dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/kitting"
        android:layout_marginTop="272dp"
        android:layout_marginStart="23dp"
        android:background="@drawable/btn_menu_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:text="요청출고"
            android:textColor="@color/black"
            android:layout_marginTop="122dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/notShipped"
        android:layout_width="178dp"
        android:layout_height="178dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tradingStatement"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="250dp"
        android:background="@drawable/btn_menu_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:text="미출자재출고"
            android:textColor="@color/black"
            android:layout_marginTop="122dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/location"
        android:layout_width="178dp"
        android:layout_height="178dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/orderReceipt"
        app:layout_constraintStart_toEndOf="@+id/notShipped"
        android:layout_marginTop="25dp"
        android:layout_marginStart="23dp"
        android:background="@drawable/btn_menu_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:text="로케이션 조회"
            android:textColor="@color/black"
            android:layout_marginTop="122dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/stock"
        android:layout_width="178dp"
        android:layout_height="178dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/orderReceipt"
        app:layout_constraintStart_toEndOf="@+id/location"
        android:layout_marginTop="25dp"
        android:layout_marginStart="23dp"
        android:background="@drawable/btn_menu_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:text="재고조사"
            android:textColor="@color/black"
            android:layout_marginTop="122dp"/>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>