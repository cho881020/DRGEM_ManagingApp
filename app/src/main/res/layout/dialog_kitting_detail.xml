<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borderbox_white_round12"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="673dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="키팅번호 - "
                    android:textColor="@color/color_000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kittingbeonho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    tools:text="B22042200003"
                    android:textColor="@color/color_3DBBE2"
                    android:textSize="16dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="22dp"
                android:background="@color/color_000000" />

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="품목코드"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/pummokcode"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="E08-000601-00"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="품명"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/pummyeong"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="G22042600391"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="도번/모델"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/dobeon_model"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="G22042600391"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="사양"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/sayang"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="G22042600391"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="단위"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/danwi"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="0004"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="위치"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="1"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="현재고수량"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/hyeonjaegosuryang"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="116"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />


                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="요청수량"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/yocheongsuryang"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="16"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />


                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="기출고수량"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/gichulgosuryang"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="0"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="출고수량"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/chulgosuryang"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="16"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />


                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@color/color_F4F4F4"
                        android:gravity="center"
                        android:text="중요자재\n여부"
                        android:textColor="@color/color_808080"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/jungyojajeyeobu"
                        android:layout_width="135dp"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="15dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="Y"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_E0E0E0" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="품목입력"
                android:textColor="@color/color_000000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="품목코드"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/edtPummokcode"
                        android:layout_width="160dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/light_gray_box"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:inputType="textVisiblePassword"
                        android:privateImeOptions="defaultInputmode=english"
                        android:imeOptions="actionNext"
                        android:selectAllOnFocus="true"
                        android:maxLines="1"
                        android:paddingHorizontal="7dp"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp"
                        tools:text="G22042600391" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수량"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/edtCount"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/light_gray_box"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:paddingHorizontal="7dp"
                        android:textColor="@color/color_000000"
                        android:textSize="12dp"
                        android:inputType="number"
                        tools:text="7" />


                </LinearLayout>

                <TextView
                    android:id="@+id/btnOk"
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/btn_find"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:text="확인"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:visibility="visible"/>




            </LinearLayout>





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="시리얼번호"
                android:textColor="@color/color_000000"
                android:textSize="16dp"
                android:textStyle="bold" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/btnCancel"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_light_gray"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="center"
                    android:text="취소"
                    android:textSize="12dp" />

                <TextView

                    android:id="@+id/btnAdd"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_save"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    android:enabled="false"
                    android:text="등록하기"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>


    </LinearLayout>
</layout>